
@page "/"
@page "/home"

@using FoundryBlazor.Shared
@using FoundryRulesAndUnits.Extensions
@using BlazorThreeJS.Viewers

@namespace Three2025.Components.Pages
@inherits HomeBase
@rendermode InteractiveServer

<PageTitle>Home</PageTitle>
<h2>Canvas3DComponent and calls API's on the Arena, Stage, and World</h2>



<div class="d-flex">

    <Canvas3DComponent SceneName="Canvas3DComponent" @ref="Canvas3DReference" CanvasWidth=@CanvasWidth CanvasHeight=@CanvasHeight />
    <ShapeTreeView/>
    <AIChat/>
    <RadzenStack Orientation="Orientation.Vertical" JustifyContent="JustifyContent.Start" style="margin-left: 10px;">
        <h3>Add to Scene</h3>
        <button class="btn btn-primary" @onclick="DoAddAxisToScene">Axis to Scene</button>
        <button class="btn btn-primary" @onclick="DoAddJetToScene">Jet to Scene</button>
        <button class="btn btn-primary" @onclick="DoAddBoxToScene">Box to Scene</button>
        <button class="btn btn-primary" @onclick="DoAddTubeToScene">Tube to Scene</button>

        <h3>Add to Arena</h3>
        <button class="btn btn-primary" @onclick="DoAddTRexToArena">T-Rex to Arena</button>

        <h3>Add to Stage</h3>
        <button class="btn btn-primary" @onclick="DoAddGeomToStage">Geometry to Stage</button>

        <h3>Add to World</h3>
        <button class="btn btn-primary" @onclick="OnAddCage">Add Cage</button>
    </RadzenStack>
</div>
